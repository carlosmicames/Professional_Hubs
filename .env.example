# Configuración de la aplicación
APP_NAME="Professional Hubs - Conflict API"
API_VERSION="v1"
DEBUG=False

# Base de datos PostgreSQL
# Para Railway: Railway auto-provisiona y configura DATABASE_URL automáticamente
# Para desarrollo local, usar formato: postgresql://user:password@localhost:5432/dbname
DATABASE_URL="postgresql://user:password@localhost:5432/conflicts_db"

# Configuración de fuzzy matching
FUZZY_THRESHOLD=70
FUZZY_HIGH_CONFIDENCE=90

# CORS - Orígenes permitidos (separados por coma)
# Para desarrollo: http://localhost:3000,http://localhost:5173
# Para producción: https://tu-dominio.com
CORS_ORIGINS="*"

# Timezone
TIMEZONE="America/Puerto_Rico"
